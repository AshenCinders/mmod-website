{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true
  },
  "files": ["src/main.ts"],
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/test-setup.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
